<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>clinsight</artifactId>
    <groupId>au.csiro.clinsight</groupId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>au.csiro.clinsight.loaders</groupId>
  <artifactId>fhir-loader</artifactId>
  <packaging>maven-plugin</packaging>

  <properties>
    <clinsight.FhirLoader.jsonBundlesDirectory/>
    <clinsight.FhirLoader.ndjsonUrl/>
  </properties>

  <dependencies>
    <dependency>
      <groupId>au.csiro.clinsight</groupId>
      <artifactId>spark-shaded</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.cerner.bunsen</groupId>
      <artifactId>bunsen-core</artifactId>
      <version>${bunsenVersion}</version>
    </dependency>
    <dependency>
      <groupId>com.cerner.bunsen</groupId>
      <artifactId>bunsen-stu3</artifactId>
      <version>${bunsenVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>3.6.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugin-tools</groupId>
      <artifactId>maven-plugin-annotations</artifactId>
      <version>3.6.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-plugin-plugin</artifactId>
      <version>3.6.0</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <goalPrefix>fhir-loader</goalPrefix>
        </configuration>
        <executions>
          <execution>
            <id>mojo-descriptor</id>
            <goals>
              <goal>descriptor</goal>
            </goals>
          </execution>
          <execution>
            <id>help-goal</id>
            <goals>
              <goal>helpmojo</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>au.csiro.clinsight.loaders</groupId>
        <artifactId>fhir-loader</artifactId>
        <version>1.0-SNAPSHOT</version>
        <configuration>
          <sparkMasterUrl>${clinsight.sparkMasterUrl}</sparkMasterUrl>
          <jsonBundlesDirectory>${clinsight.FhirLoader.jsonBundlesDirectory}</jsonBundlesDirectory>
          <ndjsonUrl>${clinsight.FhirLoader.ndjsonUrl}</ndjsonUrl>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>