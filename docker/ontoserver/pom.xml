<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>au.csiro.pathling</groupId>
    <artifactId>pathling</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>ontoserver</artifactId>
  <packaging>pom</packaging>

  <properties>
    <ontoserverVersion>ctsa-6.0.0-SNAPSHOT</ontoserverVersion>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>au.csiro.pathling</groupId>
        <artifactId>ontoserver-preload-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>assemble</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <syndicationUrl>https://r4.ontoserver.csiro.au/synd/syndication.xml</syndicationUrl>
          <upstreamContentItems>
            <contentItem>
              <identifier>http://snomed.info/sct</identifier>
              <version>http://snomed.info/sct/32506021000036107/version/20191031</version>
              <categoryTerm>BINARY</categoryTerm>
            </contentItem>
            <contentItem>
              <identifier>http://loinc.org</identifier>
              <version>2.66</version>
              <categoryTerm>BINARY</categoryTerm>
            </contentItem>
          </upstreamContentItems>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>push</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <repository>${dockerRegistry}/pathling/ontoserver</repository>
          <tag>${project.version}</tag>
          <pullNewerImage>false</pullNewerImage>
          <buildArgs>
            <ONTOSERVER_VERSION>${ontoserverVersion}</ONTOSERVER_VERSION>
            <PRELOAD_PATH>target/ontoserver-preload</PRELOAD_PATH>
          </buildArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
