<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>au.csiro.clinsight</groupId>
    <artifactId>clinsight</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>spark</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>au.csiro.clinsight</groupId>
      <artifactId>fhir-server</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>push</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <repository>${dockerRegistry}/clinsight/spark</repository>
          <tag>${project.version}</tag>
          <buildArgs>
            <SPARK_VERSION>${sparkVersion}</SPARK_VERSION>
            <SPARK_SCALA_VERSION>${sparkScalaVersion}</SPARK_SCALA_VERSION>
            <HADOOP_VERSION>${hadoopVersion}</HADOOP_VERSION>
            <SPARK_MIRROR>${sparkMirror}</SPARK_MIRROR>
            <HADOOP_MIRROR>${hadoopMirror}</HADOOP_MIRROR>
            <DEPENDENCY_PATH>target/dependency</DEPENDENCY_PATH>
          </buildArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
