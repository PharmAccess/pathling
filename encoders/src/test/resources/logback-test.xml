<configuration>
  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="CODEGEN" class="ch.qos.logback.core.FileAppender">
    <file>target/codegen.log</file>
    <encoder>
      <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <logger level="INFO" name="au.csiro"/>
  <!-- enable to debug expression code generation -->
  <!--logger level="DEBUG" name="org.apache.spark.sql.catalyst.expressions.codegen.CodeGenerator" additivity="false">
    <appender-ref ref="CODEGEN"/>
  </logger-->
  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>