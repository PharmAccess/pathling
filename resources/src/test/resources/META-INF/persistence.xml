<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  <persistence-unit name="au.csiro.clinsight.resources">

    <class>au.csiro.clinsight.resources.Dimension</class>
    <class>au.csiro.clinsight.resources.Dimension$DescribesComponent</class>
    <class>au.csiro.clinsight.resources.DimensionAttribute</class>
    <class>au.csiro.clinsight.resources.Metric</class>
    <class>au.csiro.clinsight.resources.FactSet</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url"
        value="jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>

  </persistence-unit>

</persistence>